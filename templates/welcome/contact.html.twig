{% extends 'base.html.twig' %}

{% block title %}Contactez nous
{% endblock %}

{% block body %}
	<header class="site-header d-flex flex-column justify-content-center align-items-center">
		<div class="container">
			<div class="row align-items-center">

				<div class="col-lg-5 col-12">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="{{path('welcome.index')}}">Homepage</a>
							</li>

							<li class="breadcrumb-item active" aria-current="page">Contact Form</li>
						</ol>
					</nav>

					<h2 class="text-white">Contact Form</h2>
				</div>

			</div>
		</div>
	</header>


	<section class="section-padding section-bg">
		<div class="container">
			<div class="row">

				<div class="col-lg-12 col-12">
					<h3 class="mb-4 pb-2">Remplire la formule</h3>
				</div>

				<div class="col-lg-6 col-12">
					<div class="custom-form contact-form" role="form">
						{{ form_start(form) }}
						<div class="row">
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-floating">
									<input type="text" name="{{field_name(form.Fullname)}}" id="name" class="form-control" placeholder="Nom Complet" required="">

									<label for="floatingInput">Nom Complet</label>
								</div>
							</div>

							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-floating">
									<input type="email" name="{{field_name(form.email)}}" id="email" pattern="[^ @]*@[^ @]*" class="form-control" placeholder="Email address" required="">

									<label for="floatingInput">Email address</label>
								</div>
							</div>

							<div class="col-lg-12 col-12">
								<div class="form-floating">
									<input type="text" name="{{field_name(form.Adresse)}}" id="name" class="form-control" placeholder="Addresse" required="">

									<label for="floatingInput">Addresse</label>
								</div>

								<div class="form-floating">
									<textarea class="form-control" name="{{field_name(form.description)}}" id="message" placeholder="Ecrit nous en details ..."></textarea>

									<label for="floatingTextarea">Sujet du contact</label>
								</div>
							</div>

							<div class="col-lg-4 col-12 ms-auto">
								<button type="submit" class="form-control">Submit</button>
							</div>
							
						</div>
                        {{ form_end(form) }}
					</div>

				</div>
			</section>

		{% endblock %}
